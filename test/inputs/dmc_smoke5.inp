# Example of serial branched FFS using discrete Monte Carlo (dmc)
# with a small number of trials

ffs
{
	ffs_instances	1
	ffs_seed	53

	ffs_inst
	{
		method			rosenbluth

		sim_name		dmc
		sim_mpi_tasks		1
		sim_argv		inputs/dmc_switch1_comp.dat inputs/dmc_switch1_react.dat

		init_independent	no
		init_ntrials            16
		init_teq		1.0
		init_nstepmax		10000000
		init_nsteplambda	1
		init_prob_accept        1.0

                trial_nstepmax          10000000
                trial_nsteplambda       1
	}

	interfaces
	{
		nlambda 13
		pprune_default 0.00
		nskeep_default 0
		nstate_default 0
		interface1
		{
			lambda -24.0
			ntrial 3
			pprune 1.0
		}
		interface2
		{
			lambda -22.0
			ntrial 3
		}
		interface3
		{
			lambda -20.0
			ntrial 3
		}
		interface4
		{
			lambda -18.0
			ntrial 3
		}
		interface5
		{
			lambda -15.0
			ntrial 3
		}
		interface6
		{
			lambda -12.0
			ntrial 3
		}
		interface7
		{
			lambda -9.0
			ntrial 3
		}
		interface8
		{
			lambda -5.0
			ntrial 3
		}
		interface9
		{
			lambda 0.0
			ntrial 3
		}
		interface10
		{
			lambda 7.0
			ntrial 3
		}
		interface11
		{
			lambda 15.0
			ntrial 3
		}
		interface12
		{
			lambda 20.0
			ntrial 3
		}
		interface13
		{
			lambda 25.0
			ntrial 0
		}
	}
}
